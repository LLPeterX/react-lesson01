          {props.profile.lookingForAJob ? <div className={s.findWork}>Ищу работу</div> : ""}
          <div className={s.contactTitle}>Контакты:</div>
          <div className={s.contacts}>
            {props.profile.contacts.facebook!=null ?
              <div className={s.cont1}>
                <div className={s.cont_name}>Facebook:</div>
                <div className={s.cont_value}>{props.profile.contacts.facebook}</div>
              </div>
              : ""}
            {props.profile.contacts.website != null ?
              <div className={s.cont1}>
                <div className={s.cont_name}>Web site:</div>
                <div className={s.cont_value}>{props.profile.contacts.website}</div>
              </div>
              : ""
            }
            {props.profile.contacts.vk != null ?
              <div className={s.cont1}>
                <div className={s.cont_name}>ВКонакте:</div>
                <div className={s.cont_value}>{props.profile.contacts.vk}</div>
              </div>
              : ""
            }
            {props.profile.contacts.twitter != null ?
              <div className={s.cont1}>
                <div className={s.cont_name}>Twitter:</div>
                <div className={s.cont_value}>{props.profile.contacts.twitter}</div>
              </div>
              : ""
            }
            {props.profile.contacts.instagram!=null ?
            <div className={s.cont1}>
              <div className={s.cont_name}>Instagram:</div>
              <div className={s.cont_value}>{props.profile.contacts.instagram}</div>
            </div>
            : ""
      }
      {props.profile.contacts.youtube!=null ?
            <div className={s.cont1}>
              <div className={s.cont_name}>Youtube:</div>
              <div className={s.cont_value}>{props.profile.contacts.youtube}</div>
            </div>
            : ""
      }
           {props.profile.contacts.github!=null ? 
            <div className={s.cont1}>
              <div className={s.cont_name}>GitHub:</div>
              <div className={s.cont_value}>{props.profile.contacts.github}</div>
            </div>
            : ""
           }
           {props.profile.contacts.mainLink!=null ? 
                   <div className={s.cont1}>
              <div className={s.cont_name}>Основная ссылка:</div>
              <div className={s.cont_value}>{props.profile.contacts.mainLink}</div>
            </div>
            : ""
           }
          </div>
